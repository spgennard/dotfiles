#!/bin/bash
if ! type wslpath >/dev/null 2>&1; then
    echo "$0: requires WSL2"
    exit
fi

BASE_TMPFILE=$$.bat
TMPFILE=/mnt/c/tmp/$BASE_TMPFILE
WSL_PWD=$(wslpath -w "$PWD")
mkdir -p /mnt/c/tmp

function cleanup {
    echo Finished removing $TMPFILE
    rm -f $TMPFILE
}

trap cleanup exit

cd /mnt/c/tmp
cat <<EOF | unix2dos >$TMPFILE
@pushd "$WSL_PWD"
%*
EOF

cmd.exe /k $BASE_TMPFILE $@
